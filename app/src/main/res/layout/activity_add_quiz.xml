<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:verticalScrollbarPosition="right"
    tools:context=".activities.AddQuiz">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/imageButton"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:onClick="handleChangeAvatar"
                android:layout_marginTop="40dp"
                android:text="Tap here to add image"
                android:background="@drawable/button"
                />

            <TextView
                android:id="@+id/label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="Title" />

            <EditText
                android:id="@+id/input_title"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_inputbar"
                android:hint="Enter Title" />

            <TextView
                android:id="@+id/label_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="Description" />

            <EditText
                android:id="@+id/input_description"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_inputbar"
                android:hint="Enter Description" />

            <TextView
                android:id="@+id/label_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="Visible to" />

            <Spinner
                android:id="@+id/spinner_visible"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_inputbar"
                android:entries="@array/visible" />

            <Button
                android:id="@+id/button_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/White"
                android:background="@color/colorAccent"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:text="Add Quiz" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>