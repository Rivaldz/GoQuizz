<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddQuestion">

    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="326dp"
        android:layout_height="168dp"
        android:layout_marginTop="40dp"
        android:onClick="getImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_image_black_24dp" />

    <TextView
        android:id="@+id/button_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Tap here to add image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avatarImage" />

    <EditText
        android:id="@+id/input_question"
        android:layout_width="330dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_inputbar"
        android:ems="30"
        android:hint="Input question here..."
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarImage" />

    <EditText
        android:id="@+id/input_answer1"
        android:layout_width="142dp"
        android:layout_height="90dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_inputbar"
        android:ems="10"
        android:hint="answer 1"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_question" />

    <EditText
        android:id="@+id/input_answer2"
        android:layout_width="142dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_inputbar"
        android:ems="10"
        android:hint="answer 2"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toEndOf="@+id/input_answer1"
        app:layout_constraintTop_toBottomOf="@+id/input_question" />

    <EditText
        android:id="@+id/input_answer3"
        android:layout_width="142dp"
        android:layout_height="90dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_inputbar"
        android:ems="10"
        android:hint="answer 3"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_answer1" />

    <EditText
        android:id="@+id/input_answer4"
        android:layout_width="142dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_inputbar"
        android:ems="10"
        android:hint="answer 4"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toEndOf="@+id/input_answer3"
        app:layout_constraintTop_toBottomOf="@+id/input_answer2" />

    <Button
        android:id="@+id/buttonAddQuestion"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@color/colorAccent"
        android:text="tambahkan"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_answer4" />

    <Button
        android:id="@+id/buttonSelesai"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="56dp"
        android:background="@color/colorAccent"
        android:text="SElesai "
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_answer4" />

    <HorizontalScrollView
        android:layout_width="408dp"
        android:layout_height="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/questionfragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </HorizontalScrollView>

    <Button
        android:id="@+id/buttonA"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:text="A"
        app:layout_constraintEnd_toStartOf="@+id/input_answer1"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_question" />

    <Button
        android:id="@+id/buttonB"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="64dp"
        android:text="C"
        app:layout_constraintEnd_toStartOf="@+id/input_answer3"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonA" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:text="b"
        app:layout_constraintEnd_toStartOf="@+id/input_answer2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/input_answer1"
        app:layout_constraintTop_toBottomOf="@+id/input_question" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="64dp"
        android:text="D"
        app:layout_constraintStart_toEndOf="@+id/input_answer3"
        app:layout_constraintTop_toBottomOf="@+id/buttonC" />

    <TextView
        android:id="@+id/textViewPin"
        android:layout_width="67dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_height="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>